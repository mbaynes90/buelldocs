# Server Configuration
PORT=3000
NODE_ENV=production
SESSION_SECRET=<generate-strong-512bit-key>

# Database Configuration
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=buelldocs
DB_USER=your-db-user
DB_PASSWORD=your-secure-password

# Payment Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Security Configuration
ENCRYPTION_KEY=<generate-strong-256bit-key>
JWT_SECRET=<generate-strong-512bit-key>
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Enable Security Features
ENABLE_2FA=true
ENABLE_IP_FILTERING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_FRAUD_DETECTION=true

# Storage
DOCUMENT_STORAGE_PATH=/secure/storage/path
BACKUP_STORAGE_PATH=/secure/backup/path

# Monitoring
SENTRY_DSN=<your-sentry-dsn>
LOG_LEVEL=infoALERT_EMAIL=alerts@yourdomain.com
